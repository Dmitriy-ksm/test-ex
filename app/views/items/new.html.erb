<h1>New Item</h1>

<%= form_for @item do |f| %>

    <p>
        <label for="item_name">Название:</label>
        <%= f.text_field :name %>
    </p>
    <p>
        <label for="item_price">Цена:</label>
        <%= f.text_field :price %>
    </p>
    <p>
        <label for="item_description">Описание:</label>
        <%= f.text_field :description %>
    </p>

    <p>
        <%= f.submit "Создать товар" %>
    </p>

<% end %>