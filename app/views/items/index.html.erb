<div>
    <h1>Items</h1>
    <table>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th></th>
      </tr>
      <% @items.each do |item| %>
        <tr>
          <td>
            <%= link_to item.name, item_path(item) %>
          </td>
          <td>
            <%= item.price %>
          </td>
          <td>
            <%= form_with scope: :post, method: :post, model: [:buy, item] do |f| %>
              <input type="number" name="count" value=1 min=1/>
              <!-- Строка снизу приписывает поле count к "item"=>{"count"=>"1"} -->
              <!--<%= f.number_field :count, min: 1, step: 1, :value => 1  %>-->
              <%= f.submit "Купить" %>
            <% end %>
           <%= link_to "Удалить", item, method: :delete, data: {confirm: "Вы уверенны что хотите удалить этот товар?"} %>
          </td>
        </tr>
      <% end %>
  </table>
</div>
